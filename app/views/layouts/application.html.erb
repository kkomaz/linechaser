<!DOCTYPE html>
<html>
<head>
  <title>LineChaser</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js?"></script>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
  <script src="javascripts/insert_map.js"></script>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container">
      <div class="navbar-brand">
        <%= link_to "LineChaser", root_path  %>
      </div>        
      <% if logged_in? %>
        <ul class="nav navbar-nav navbar-right">
            <li class="welcome_sign">Welcome <strong><%= current_user.name %></strong>!</li>
            <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right welcome_sign">
          <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
        </ul>
      <% end %>
      </div>
  </div>
</nav>
    <div class="container">
        <div class="container-fluid">
            <%= yield %>
        </div>
    </div>
</body>